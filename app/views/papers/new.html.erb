<div class="papers-wrapper">
  <div class="main users-new">
    <div class="container">
      <div class="form-heading">新規ユーザー登録</div>
      <div class="form users-form">
        <div class="form-body">
          <% @paper.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
          <% end %>
          <%= form_tag("/papers/create") do %>
          <p>ユーザー名</p>
          <input name="name" value="<%= @paper.name %>">
          <p>メールアドレス</p>
          <input name="email" value="<%= @paper.email %>">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= @paper.password %>">
          <input type="submit" value="Sign Up">
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

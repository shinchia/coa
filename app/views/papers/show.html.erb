<div class="papers-wrapper">
  <div class="main user-show">
    <div class="container">
      <div class="user">
        <img src="<%= "/paper_images/#{@paper.image_name}" %>">
        <h2><%= @paper.name %></h2>
        <p><%= @paper.email %></p>
        <% if @paper.id == @current_paper.id %>
        <%= link_to("編集", "/papers/#{@paper.id}/edit") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
